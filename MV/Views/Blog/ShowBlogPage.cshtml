@model IEnumerable<MD.BlogData>

@{
    ViewBag.Title = "ShowBlogPage";
}

<h2>ShowBlogPage</h2>

<p>
    @Html.ActionLink("Create New", "ShowBlogForm", "Blog")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BlogGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BlogGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
